---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  description: string;
  idList: string;
}

const { icon, description, idList } = Astro.props;
---

<div class="flex justify-center">
  <div
    id={idList}
    class="!invisible fixed bottom-6 flex items-center w-full max-w-xs p-4 text-stone-500 bg-white rounded-lg shadow-md dark:text-stone-400 dark:bg-stone-900"
    role="alert"
  >
    <div
      class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-stone-500 bg-stone-200 rounded-lg dark:bg-stone-600 dark:text-stone-200"
    >
      <Icon name={icon} />
    </div>
    <div class="ms-3 text-sm font-normal">{description}</div>
  </div>
</div>
